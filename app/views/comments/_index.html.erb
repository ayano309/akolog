 <% comments.each do |comment| %>
  <p><%= image_tag "no_image.jpeg" %></p>
  <%= comment.user.name %>
  <%= comment.created_at.strftime('%Y/%m/%d') %><%= comment.content %>
  <% if comment.user == current_user %>
    <%= link_to "削除", article_comment_path(comment.article, comment), method: :delete, remote: true, data: {confirm: "本当に削除しますか？"} %>
  <% end %>
<% end %>