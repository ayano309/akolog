<!DOCTYPE html>
<html>
  <head>
    <title>Akolog</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="header">
      <p class="header_pageTitle">Akolog</p>
      <div class="dropdown">
        <%= image_tag 'no_image.jpeg', class: 'header_avatar dropbtn' %>
        <div class="dropdown-content">
          <a href="#">プロフィール</a>
          <a href="#">ログアウト</a>
        </div>
      </div>
    </header>
    <p class="notice"><%= notice %>
    <p class="alert"><%= alert %>
    <%= yield %>
  </body>
</html>
