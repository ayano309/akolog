 <% if user_signed_in? %>
  <% if article.has_liked?(current_user)%>
    <div class="article_heart">
      <%= link_to article_like_path(article), data: { method: 'delete' },remote: true  do %>
        <%= image_tag 'heart-active.svg'%>
      <% end %>
    </div>
  <% else %>
    <div class="article_heart">
      <%= link_to article_like_path(article), data: { method: 'post' },remote: true  do %>
        <%= image_tag 'heart.svg'%>
      <% end %>
    </div>
  <% end %>
<% end %>